-# coding: utf-8
!!! 5
%html
  %head
    %meta( charset="utf-8" )
    %title fdlint - 让code review更加轻松
    %style
      = "@import url(#{url("/stylesheets/bootstrap.min.css")});"
    :css
      .src.fatal { border-bottom:1px dotted #F00; }
      .src.warn, .src.error { border-bottom:1px dotted #FF7300; background-color:#FEE9CC; }
      .src.info { background-color:#F4FAFF; color:#2F6F9F; }
      .msg.fatal { background-color:#f00; color:#fff; }
      .msg.error { color: #DD4B39; }
      .msg.warn { color: #F89406; }
      .msg.info { color: #699D36; font-weight:bold; }
      pre code { font-family:"Lucida Sans Typewriter", "consolas", monospace; line-height:1.5; font-size:14px; }
      pre code ol { padding-left:1em; }
      pre code li.err { color:red; }
      pre code li.err span { color:#808080; }
      pre code li span { line-height:20px; }
      code { background-color:transparent; }
      #src { margin:1em 0;}
      .input { width: 100%; height: 100%; height:150px; margin:1em 0; }
      .input.over { background:#DCEAF4; border: 1px dashed #BBD8E9;}

  %body
    %script( src="http://style.china.alibaba.com/js/lib/fdev-v4/core/fdev-min.js" )
    %script{ :src => url("/scripts/html5uploader.js") }
    %script{ :src => url("/scripts/check.js?v=20120109") }
    .container
      .actions
        %ul
          %li 输入代码，选择相应的语法，点击检查按钮
          %li 或将文件拖到文本框内 （可多选）
      %textarea.input( placeholder="在此输入代码，或将文件拖到这里" )
      %p
        类型
        %select( name="syntax" )
          %option CSS
          %option Javascript
          %option HTML
        %button.submit.btn.primary 检查
      .content
        #src


    <!-- Piwik --> 
    :javascript
      var pkBaseURL = (("https:" == document.location.protocol) ? "https://wd.alibaba-inc.com/piwik/" : "http://wd.alibaba-inc.com/piwik/");
      document.write(unescape("%3Cscript src='" + pkBaseURL + "piwik.js' type='text/javascript'%3E%3C/script%3E"));

    :javascript
      try {
      var piwikTracker = Piwik.getTracker(pkBaseURL + "piwik.php", 2);
      piwikTracker.trackPageView();
      piwikTracker.enableLinkTracking();
      } catch( err ) {}
    
    %noscript
      %p
        %img( src="http://wd.alibaba-inc.com/piwik/piwik.php?idsite=2" )

    <!-- End Piwik Tracking Code -->
